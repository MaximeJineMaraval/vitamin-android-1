<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/vtmnBackgroundColorSecondary"
            android:orientation="vertical"
            android:padding="@dimen/padding_screen"
            android:theme="@style/Theme.Vitamin.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strict light theme"
                android:textAppearance="?attr/vtmnTextAppearanceHeadline6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Use [TO DEFINED] to display you app in light"
                android:textAppearance="?attr/vtmnTextAppearanceBody1" />

            <include layout="@layout/include_themes" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/vtmnBackgroundColorSecondary"
            android:orientation="vertical"
            android:padding="@dimen/padding_screen"
            android:theme="@style/Theme.Vitamin.Dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strict dark theme"
                android:textAppearance="?attr/vtmnTextAppearanceHeadline6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Use [TO DEFINED] to display you app in dark"
                android:textAppearance="?attr/vtmnTextAppearanceBody1" />

            <include layout="@layout/include_themes" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/vtmnBackgroundColorSecondary"
            android:orientation="vertical"
            android:padding="@dimen/padding_screen"
            android:theme="@style/Theme.Vitamin.DayNight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night mode reactive theme"
                android:textAppearance="?attr/vtmnTextAppearanceHeadline6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="Use [TO DEFINED] to react to your phone's night mode"
                android:textAppearance="?attr/vtmnTextAppearanceBody1" />

            <include layout="@layout/include_themes" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>